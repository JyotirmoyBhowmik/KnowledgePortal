            "members": {
                "addEveryone": true,
                "excludeExternalUsers": true,
                "azureADGroups": [],
                "users": []
            },
            "settings": {
                "allowMembersEditMembership": false,
                "onlyAllowMembersViewMembership": false
            }
        },
        {
            "name": "KB Members",
            "description": "Content contributors who can create and edit articles",
